body {
    background-color: #002020;
    color: #a4f4f4;
    font-family: 'Nunito', sans-serif;
    font-weight: 400;
    margin: 2%;
}
h1 {
    font-family: 'Nunito', sans-serif;
    font-weight: 700;
}
nav {
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
}
a {
    color: #a4f4f4;
    font-family: 'Montserrat', sans-serif;
    text-decoration: underline;
}
a:visited {
    /* visited link */
    color: #00a8a8;
}
a:hover, a:focus {
    /* no underline when hovering over a link */
    text-decoration: none;
    color: #ff4f00
}
a:active {
    /* selected link */
    color: #00a8a8;
    text-decoration: none;
}
.navigation-list {
    list-style-type: none;
}
.navigation-list li {
    display: inline-block;
    margin-left: 15px;
}
.navigation-list__item--active {
    text-decoration: none;
}
button {
    /* overwrites browser defaults and resets the border */
    border: none;
    /* takes the font from the outer container */
    font-family: inherit;
    /* styles the button */
    background-color: #a4f4f4;
    color: #002020;
    text-decoration: none;
    /* adds spacing to the button */
    padding: 10px;
    border-radius: 3px;
    /* gives the button a bottom border with a width of 2px, a type of solid, and a color */
    border-bottom: 2px solid #00a8a8;
    font-family: 'Montserrat', sans-serif;
    -webkit-transition: 0.2s opacity;
    -o-transition: 0.2s opacity;
    transition: 0.2s opacity;
}
.button {
    /* overwrites browser defaults and resets the border */
    border: none;
    /* takes the font from the outer container */
    font-family: inherit;
    /* styles the button */
    background-color: #a4f4f4;
    color: #002020;
    text-decoration: none;
    /* adds spacing to the button */
    padding: 10px;
    border-radius: 3px;
    /* gives the button a bottom border with a width of 2px, a type of solid, and a color */
    border-bottom: 2px solid #00a8a8;
    font-family: 'Montserrat', sans-serif;
    -webkit-transition: 0.2s opacity;
    -o-transition: 0.2s opacity;
    transition: 0.2s opacity;
}
button:hover, 
button:focus,
.button:hover,
.button:focus {
    /* lets the mouse appear as a hand when hovering over the button */
    cursor: pointer;
    /* reduces the opacity of the button to 80% */
    opacity: 0.8;
}
table {
    font-family: 'Montserrat', sans-serif;
    font-weight: 200;
    line-height: 10mm;
    font-size: 20px;
}
th {
    font-weight: 500;
    text-align: left;
}
#about__main {
    width: 95%;
    height: auto;
    margin: auto;
    padding: 10px;
}
#about__main--text {
    width: 50%;
    height: auto;
    float: left;
}
#about__main--img {
    float: left;
    width: 50%;
    height: auto;
}
#about__main--img__fleur {
    fill: #ff4f00;
}
        #about__main--img__fleur:hover {
        -webkit-animation: color-change 4s infinite alternate linear;
                animation: color-change 4s infinite alternate linear; 
    }
@-webkit-keyframes color-change {
    from {
        fill: #ff4f00;
    }
    to {
        fill: #a4f4f4;
    }
}
@keyframes color-change {
    from {
        fill: #ff4f00;
    }
    to {
        fill: #a4f4f4;
    }
}    
input {
    font-family: 'Montserrat', sans-serif;
}
input {
    background-color: #a4f4f4;
}
textarea {
    background-color: #a4f4f4;
}
